# Configuration de l'application mobile Flutter
PORT=5000
HOST=0.0.0.0

# URL de l'API backend
# Pour développement local
FLUTTER_API_URL=http://localhost:8000
# Pour production (remplacez par votre domaine)
# FLUTTER_API_URL=https://api.votre-domaine.com

# Configuration de l'application
FLUTTER_APP_NAME=Arosa-je Mobile
FLUTTER_APP_VERSION=1.0.0

# Mode debug
FLUTTER_DEBUG=true
FLUTTER_ENVIRONMENT=development

# Configuration des services
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false

# Configuration géolocalisation
DEFAULT_LATITUDE=48.8566
DEFAULT_LONGITUDE=2.3522

# Configuration des uploads
MAX_IMAGE_SIZE=10485760
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png

# Configuration WebSocket
WEBSOCKET_URL=ws://localhost:8000/ws
WEBSOCKET_RECONNECT_INTERVAL=5000

# Configuration de cache
CACHE_DURATION=3600
OFFLINE_MODE=true