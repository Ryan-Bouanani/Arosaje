# Configuration principale A'rosa-je
# Copiez ce fichier vers .env et configurez les valeurs selon votre environnement

# Environnement (development, staging, production)
NODE_ENV=development
ENVIRONMENT=development

# Configuration générale
APP_NAME=Arosa-je
APP_VERSION=1.0.0
DEBUG=true

# URLs des services
API_URL=http://localhost:8000
WEB_URL=http://localhost:3000
MOBILE_URL=http://localhost:5001

# Base de données principale
DATABASE_URL=postgresql://arosaje:epsi@localhost:5432/arosaje_db
# Alternative SQLite pour développement
# DATABASE_URL=sqlite:///assets/database/arosaje.db

# Configuration Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Configuration JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Configuration Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Configuration des uploads
MAX_UPLOAD_SIZE=10485760
UPLOAD_PATH=assets/uploads/
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif

# Configuration monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
GRAFANA_PORT=3001

# Configuration de sécurité
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:5001
SESSION_SECRET=your-session-secret-here

# Configuration des logs
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5