# Configuration de l'API
PORT=8000
HOST=0.0.0.0
CORS_ORIGINS=http://localhost:3000,http://web:3000,http://localhost:5001,http://mobile:5000

# Configuration de la base de données
# Pour développement local avec SQLite
DATABASE_URL=sqlite:///assets/database/arosaje.db
# Pour production avec PostgreSQL (décommentez et configurez)
# DATABASE_URL=postgresql://username:password@localhost:5432/arosaje_db

# Configuration JWT - CHANGEZ CES VALEURS EN PRODUCTION
SECRET_KEY=your-secret-key-here-generate-a-strong-one
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configuration Email SMTP (optionnel)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Configuration Redis (optionnel)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Mode debug
DEBUG=true
ENVIRONMENT=development

# Upload de fichiers
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif

# Configuration des logs
LOG_LEVEL=INFO
LOG_FILE=logs/app.log